#!/bin/bash

function idle-move() {
  while true
  do
    for ANGLE in 0 90 180 270
    do
      xdotool mousemove_relative --polar $ANGLE 100
      sleep 10
    done
  done
}

# function for launching applications in the background
function l() {
  if [[ -n "$*" ]]; then
    eval "$* 2>&1 &"
  elif [[ -z "$*" ]]; then
    echo "No parameters passed"
  fi
}

# silent launch
function sl() {
  l $@ > /dev/null
}

# get remote ip
function remote-ip() {
  curl https://icanhazip.com/
}
