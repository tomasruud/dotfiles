let mapleader="\<Space>"

set number

set showmode
set scrolloff=5
set incsearch
set ignorecase

set colorcolumn=80

set mouse="a"

set autoindent
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab


let g:netrw_keepdir=0
let g:netrw_liststyle=3
let g:netrw_fastbrowse=2

nmap <Leader>e :Explore<CR>
