root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab

[*.lua]
indent_style = space
indent_size = 3

[*.json]
indent_style = space
indent_size = 2

[*.snap]
insert_final_newline = false

[*.elv]
indent_style = space
indent_size = 2
